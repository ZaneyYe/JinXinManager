#set($layout = "layout/main_layout.vm")

<div class="box">
    <div class="box-header">
        <h3 class="box-title">图片管理</h3>
    </div>
    <!-- /.box-header -->
    <div data-options="region:'center',fit:true,split:false,border:false" >
        <table id="imgtt" style="width:100%"></table>
    </div>


    <div class="modal fade" id="uploadFileWin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        上传图片
                    </h4>
                </div>
            ##                <iframe name="ajaxUpload" style="display: none"></iframe>
                <form id="uploadForm">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="name">文件描述</label>
                            <input type="text" class="form-control" id="desc"
                                   name="desc" placeholder="请输入名称">
                        </div>
                        <div class="form-group">
                            <label for="inputfile">文件输入</label>
                            <input type="file" id="upFile" name="upFile"/>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭
                    </button>
                    <button type="submit" class="btn btn-primary" id="subBtn">提交
                    </button>
                ##                    <input type="submit" class="btn btn-primary" value="提交"/>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</div>

<script src="/static/js/easyui/jquery.min.js" type="text/javascript"></script>
<script src="/static/js/easyui/easyloader.js" type="text/javascript"></script>
<script src="/static/js/easyui/jquery.easyui.min.js" type="text/javascript"></script>
<script src="/static/js/easyui/jquery.easyui.mobile.js" type="text/javascript "></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#imgtt").datagrid({
                    url : "$!basePath/pic/list.do",
                    fitColumns : true,
                    striped : true,
                    pagination : true,
                    rownumbers : true,
                    pageSize : 50,
                    pageNumber : 1,
                    toolbar: toolbar,
                    singleSelect : true,
                    pageList : [ 50, 100, 150, 200, 250],
                    loadMsg : '数据正在加载中...',
                    border: false,
                    columns:[[
                        {field : 'id', title : '<span class="txtcenter">图片编号</span>',  resizable : true, hidden : false, sortable : false, width:$(this).width()*0.1, align: 'left'},
                        {field : "type",title : '<span class="txtcenter">图片类型</span>',  resizable : true, hidden : false, sortable : false, width:$(this).width()*0.1, align: 'left'},
                        {field : "url",title : '<span class="txtcenter">图片链接</span>',  resizable : true, hidden : false, sortable : false, width:$(this).width()*0.1, align: 'left',
                            formatter : function (value,row,index) {
                                return "<a href='"+value+"'>"+value+"</a>";
                            }
                        },
                        {field : "createTimeStr",title : '<span class="txtcenter">上传时间</span>',  resizable : true, hidden : false, sortable : false, width:$(this).width()*0.1, align: 'left'},
                        {field : ' ',title : '<span class="txtcenter">操作</span>',  resizable : true, hidden : false, sortable : false, width:$(this).width()*0.05, align: 'center',
                                    formatter:function(value,row,index) {
                                        var d = "<button class='txtcenter'>删除</button>";
                                        return d;
                                    }
                        }
                    ]]
                }
            )
    })

    var toolbar = [{
        text:'添加图片',
        iconCls:'icon-add',
        handler:function(){
            $("#uploadFileWin").modal('show');
        }
    }]

    function upOnload() {
        $("#imgtt").datagrid("reload");
    }

    function validParams(){
        if($("#desc").val().length == 0){
            alert("请对图片进行描述");
            return;
        }
    }

    $("#subBtn").click(function () {
        validParams();
        var data = new FormData($("uploadForm"))[0];
        $.ajax({
            url: "/pic/uploadPic.do",
            type: "POST",
            data: data,
            dataType: "JSON",
            contentType: false,
            proccessData: false,
            success: function (data) {
                if (data.result != null) {
                    $("#imgtt").datagrid("reload");
                }
            },
            error: function (data) {
                alert("上传失败");
            }
        })
    })






</script>
