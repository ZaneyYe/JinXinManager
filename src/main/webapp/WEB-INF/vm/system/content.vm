<!-- 实例化编辑器 -->
<script type="text/javascript">
    UE.Editor.prototype._bkGetActionUrl = UE.Editor.prototype.getActionUrl;
    UE.Editor.prototype.getActionUrl = function (action) {
        if (action == 'uploadimageUE' || action == "uploadfile") {
            return "$!basePath/pic/ue/uploadPic.do";
            } else {
                return this._bkGetActionUrl.call(this, action);
            }
    };
    var ue = UE.getEditor('container');

    function getContent() {
        return UE.getEditor('container').getContent().valueOf();
    }
    $("#save").click(function () {
        ue.sync();
        var title = $("#articTitle").val();
        var summary = $("#summary").val();
        var content = getContent();
        var secret = 0;
        if ($("#isSecret").is(":checked")) {
            secret = 1;
        }
        var articType = $("#articType").select(true).val();
        var data = {
            title: title,
            summary: summary,
            secret: secret,
            article: content,
            type: articType
        }
        console.log(data);
        $.ajax({
            url: "$!basePath/article/saveArticle.do",
            type: "POST",
            data: data,
            dataType: 'json',
            cache: false,
            success: function (data) {
                if (data.code == 1) {
//                    $.messager.alert
                }
            }
        })
    })
</script>
